<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_nav"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.submissionawal.ui.homeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.example.submissionawal.ui.upcomingFragment"
        android:label="Upcoming"
        tools:layout="@layout/fragment_upcoming"/>
    <fragment
        android:id="@+id/navigation_finished"
        android:name="com.example.submissionawal.ui.finishFragment"
        android:label="Finish"
        tools:layout="@layout/fragment_finish" />
    <activity
        android:id="@+id/detailEventActivity"
        android:name="com.example.submissionawal.ui.detailEventsActivity"
        android:label="Detail Event"
        tools:layout="@layout/activity_detail_events" />
    <activity
        android:id="@+id/searchActivity"
        android:name="com.example.submissionawal.ui.searchActivity"
        android:label="Search"
        tools:layout="@layout/activity_search" />
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.submissionawal.ui.favoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.submissionawal.ui.settingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>