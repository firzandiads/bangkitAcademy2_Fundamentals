<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_nav"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.submissionawal.ui.homeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_searchActivity"
            app:destination="@id/searchActivity" />
    </fragment>
    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.example.submissionawal.ui.upcoming.upcomingFragment"
        android:label="Upcoming Events"
        tools:layout="@layout/fragment_upcoming"/>
    <fragment
        android:id="@+id/navigation_finished"
        android:name="com.example.submissionawal.ui.finish.finishFragment"
        android:label="Finished Events"
        tools:layout="@layout/fragment_finish" />
    <activity
        android:id="@+id/detailEventActivity"
        android:name="com.example.submissionawal.ui.detailEventsActivity"
        android:label="activity_detail_events"
        tools:layout="@layout/activity_detail_events" />
    <activity
        android:id="@+id/searchActivity"
        android:name="com.example.submissionawal.ui.searchActivity"
        android:label="activity_search"
        tools:layout="@layout/activity_search" />

</navigation>